  <h1>Todos</h1>
  <section class="card">
   
        <button id="toggle-tasks" class="task-toggle">
            <span class="task-toggle-text">Whats need to be done?</span>
          </button>
        <ul id="task-list" class="task-lists">
        <li class="task-item">
            <input type="checkbox" id="task-1" class="task-checkbox">
            <label for="task-1" class="task-label">Go Shopping</label>
        </li>
        <li class="task-item">
